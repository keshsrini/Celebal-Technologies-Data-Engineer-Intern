{
    "name": "SftpServer",
    "type": "Microsoft.DataFactory/factories/linkedservices",
    "properties": {
        "type": "Sftp",
        "typeProperties": {
            "host": "<sftp-host>",
            "port": 22,
            "authenticationType": "Basic",
            "userName": "<username>",
            "password": {
                "type": "SecureString",
                "value": "<password>"
            },
            "skipHostKeyValidation": true
        }
    }
}